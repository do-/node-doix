{
  "name": "doix",
  "version": "1.0.49",
  "description": "A general purpose sever side framework",
  "main": "index.js",
  "files": [
    "/lib",
    "/badges"
  ],
  "scripts": {
    "test": "jest",
    "test-ci": "jest --ci --coverage"
  },
  "jest": {
    "collectCoverageFrom": [
      "lib/**/*.js"
    ],
    "coverageReporters": [
      "clover",
      "json",
      "lcov",
      "text",
      "json-summary"
    ],
    "verbose": false,
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/__tests__/data",
      "/__tests__/lib"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/do-/node-doix.git"
  },
  "author": "Dmitry Ovsyanko",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/do-/node-doix/issues"
  },
  "devDependencies": {
    "jest": "^29.3.1"
  },
  "homepage": "https://github.com/do-/node-doix#readme",
  "peerDependencies": {
    "winston": "^3.13.1"
  },
  "dependencies": {
    "croner": "^8.1.0",
    "events-to-winston": "^1.0.3",
    "require-sliced": "^1.0.2"
  }
}
